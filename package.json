{
  "name": "rollup-plugin-sizes",
  "version": "0.5.0",
  "description": "Show info about files/packages included with your rollup bundle",
  "main": "index.js",
  "repository": "krixi/rollup-plugin-sizes",
  "bugs": {
    "url": "https://github.com/krixi/rollup-plugin-sizes/issues"
  },
  "scripts": {
    "lint": "npx eslint --max-warnings 0 .",
    "release": "npm version -m \"v%s\"",
    "test": "npm run lint && node ./test/test.js",
    "preversion": "npm test"
  },
  "keywords": [
    "rollup",
    "filesizes",
    "bundler",
    "rollup-plugin"
  ],
  "author": "Pat Cavit <npm@patcavit.com>, krixi",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^4.19.1",
    "eslint-config-arenanet": "^3.3.1",
    "rollup": "^0.65.0"
  },
  "dependencies": {
    "filesize": "^3.6.1"
  },
  "eslintConfig": {
    "extends": "arenanet",
    "env": {
      "node": true
    },
    "rules": {
      "no-console": "off",
      "prefer-template": "off"
    }
  }
}
